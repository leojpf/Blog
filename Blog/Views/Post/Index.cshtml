@model IEnumerable<Blog.Models.PostModel>

<h1>Lista de Posts</h1>

<table>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Resumo</th>
            <th>Categoria</th>
        </tr>
    </thead>    
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Titulo</td>
                <td>@post.Resumo</td>
                <td>@post.Categoria</td>
                <td>@Html.ActionLink("Alterar", "Alterar",  new { id = post.Id })</td>
                <td>@Html.ActionLink("Excluir", "Excluir", new { id = post.Id })</td>
            </tr>            
        }
    </tbody>
</table>

